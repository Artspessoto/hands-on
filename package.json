{
  "name": "api",
  "version": "1.0.0",
  "description": "HandsOn é uma API que conecta voluntários, doadores e líderes comunitários em iniciativas sociais, facilitando a arrecadação de alimentos, roupas e apoio educacional para pessoas em situação de necessidade.",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node build/server.js",
    "build": "tsup src --out-dir build",
    "seed:admin": "tsx prisma/seeds/seedAdminUser.ts",
    "prisma:init": "npx prisma init",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate",
    "prisma:studio": "npx prisma studio"
  },
  "keywords": [
    "api",
    "fastify",
    "nodejs",
    "doações",
    "solidariedade",
    "voluntariado",
    "responsabilidade social",
    "arrecadação"
  ],
  "author": "Arthur Martins Lopes Spessoto",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/node": "22.10.2",
    "prisma": "6.1.0",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/cors": "11.0.1",
    "@fastify/jwt": "9.1.0",
    "@prisma/client": "6.1.0",
    "bcrypt": "6.0.0",
    "dotenv": "16.4.7",
    "fastify": "5.2.0",
    "zod": "3.24.1"
  }
}
